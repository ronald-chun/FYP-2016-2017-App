<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/lightblue"
    tools:context="com.cuhk.ieproject.SettingActivity">

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Login as: "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/user_name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/user_name"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        android:text="Logout"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/cameraSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Enable Camera "
        android:textSize="24sp" />

    <TextView
        android:id="@+id/card_size_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cameraSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Card size: "
        android:textSize="18sp" />
    <TextView
        android:id="@+id/card_size_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/card_size_name"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/cameraSwitch"
        android:textSize="18sp"/>


    <SeekBar
        android:id="@+id/card_size_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/card_size_value"
        android:layout_alignStart="@+id/cameraSwitch"
        android:layout_alignEnd="@+id/cameraSwitch" />

    <Button
        android:id="@+id/timerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_size_seekbar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="Start Timer"
        android:textSize="18sp" />

    <Switch
        android:id="@+id/contextSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timerBtn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:text="Enable Context-aware "
        android:textSize="20sp" />


    <Button
        android:id="@+id/okButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contextSwitch"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="OK"
        android:textSize="18sp" />


</RelativeLayout>
